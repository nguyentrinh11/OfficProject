<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape
            android:shape="rectangle">
            <solid android:color="@color/while_background" />

        </shape>
    </item>

    <!-- this mess is what we have to do to get a bottom and left border only. -->
    <item android:top="-2dp"
        android:left="1px"
        android:right="-2dp"
        android:bottom="-2dp">
        <shape
            android:shape="rectangle">
            <stroke android:width="1px" android:color="@color/org_line_divided" />
            <solid android:color="@color/while_background" />
        </shape>
    </item>

</layer-list>