<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:font="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_toolbar_details"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/fm_toolbar"
        android:background="#f44336">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_marginLeft="@dimen/view_margin_left"
            android:layout_marginStart="@dimen/view_margin_left"
            android:gravity="center"
            android:src="@drawable/ic_back_screen"
            android:textColor="@color/activity_add_tag_tv"
            android:textSize="@dimen/activity_add_tag_tv_text_size" />

        <offic.htk.com.officproject.views.CustomFontTextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_marginLeft="@dimen/tv_margin_left"
            android:layout_marginStart="@dimen/tv_margin_left"
            android:gravity="center"
            android:text="Back"
            android:textColor="@color/activity_add_tag_tv"
            android:textSize="@dimen/activity_add_tag_tv_text_size"
            font:font="@string/font_helveticaneue" />

        <offic.htk.com.officproject.views.CustomFontTextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Language"
            android:textColor="@color/activity_add_tag_tv"
            android:textSize="@dimen/activity_add_tag_tv_text_size"
            android:textStyle="bold"
            font:font="@string/font_helveticaneue" />

        <offic.htk.com.officproject.views.CustomFontTextView
            android:id="@+id/tv_done"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginEnd="@dimen/activity_add_tag_tv_cancel_margin_left_right"
            android:layout_marginRight="@dimen/activity_add_tag_tv_cancel_margin_left_right"
            android:gravity="center"
            android:text="@string/activity_add_tag_tv_done"
            android:textColor="@color/activity_add_tag_tv"
            android:textSize="@dimen/activity_add_tag_tv_text_size"
            android:visibility="gone"
            font:font="@string/font_helveticaneue" />
    </FrameLayout>
</LinearLayout>