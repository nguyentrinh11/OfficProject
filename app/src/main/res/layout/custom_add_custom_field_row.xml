<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:font="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/add_contacts_layout_height_50dp"
    android:layout_marginRight="5dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_delete_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/img_delte_margin_left_10dp"
        android:layout_marginRight="@dimen/img_delte_margin_left_10dp"
        android:contentDescription="@null"
        android:onClick="onDeleteClicked"
        android:src="@drawable/ic_delete_phone" />

    <offic.htk.com.officproject.views.NewEditText
        android:id="@+id/edt_field_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:background="@null"
        android:ems="10"
        android:gravity="center"
        android:hint="@string/add_custom_field_custom_field"
        android:inputType="number"
        android:singleLine="true"
        android:textColor="@color/add_contact_hint_text_color"
        android:textCursorDrawable="@drawable/ic_cusor_text"
        android:textSize="@dimen/add_contacts_text_size_normal_14sp"
        font:font="@string/font_helveticaneue">

        <requestFocus />
    </offic.htk.com.officproject.views.NewEditText>
</LinearLayout>