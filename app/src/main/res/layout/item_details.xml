<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:font="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/navigation_view_item_details_ln_height"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/navigaiton_view_item_avatar_name_margin_left"
        android:background="@drawable/menu_contacts" />

    <offic.htk.com.officproject.views.CustomFontTextView
        android:id="@+id/tv_details_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/navigaiton_view_item_avatar_name_margin_left"
        android:gravity="center_vertical"
        android:text="@string/navtigation_view_item_avatar_user_name"
        android:textColor="@color/navigation_view_item_avatar_tv_username"
        android:textSize="@dimen/navigation_view_details_text_size"
        font:font="@string/font_open_san_light" />
</LinearLayout>