<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/all_contacts_popup_set_org_width"
    android:layout_height="30dp"
    android:clickable="true"
    android:focusable="true"
    android:weightSum="10"
    android:orientation="vertical"
    android:padding="5dp">
    <LinearLayout
        android:id="@+id/ll_org"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:clickable="true"
        android:focusable="true"
        android:weightSum="10"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_org_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true" />

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_title"
                android:layout_marginLeft="@dimen/all_contacts_popup_set_org_text_margin_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chart"
                android:textColor="@color/navigation_bg_item_avatar"
                android:textSize="@dimen/all_contacts_popup_set_org_text_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="15dp"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_org_checked"
                android:layout_width="@dimen/all_contacts_popup_set_org_image_width"
                android:layout_height="@dimen/all_contacts_popup_set_org_image_height"
                android:layout_centerHorizontal="true" />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:background="@color/org_line_divided"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
</LinearLayout>