<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    tools:context="offic.htk.com.officproject.fragments.FragmentContacts">

    <LinearLayout
        android:id="@+id/ll_content"
        android:background="@color/while_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/layout"
            android:gravity="center_vertical"
            android:background="@color/search_ouside_background"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_width="440dp"
            android:layout_height="60dp">
            <LinearLayout
                android:id="@+id/bt_filter"
                android:layout_marginRight="10dp"
                android:textSize="13dp"
                android:layout_alignParentLeft="true"
                android:background="@drawable/contact_set_org_fillter_button_background"
                android:gravity="center_horizontal"
                android:layout_width="65dp"
                android:layout_height="30dp"
                android:orientation="horizontal" >
                <ImageView
                    android:id="@+id/img_org_change"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/all_change_view"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
                <ImageView
                    android:src="@drawable/arrow_change_view"
                    android:layout_width="20dp"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:background="@drawable/item_btn1"
                android:id="@+id/llsearch"
                android:gravity="center_horizontal"
                android:layout_width="260dp"
                android:layout_height="35dp"
                android:orientation="horizontal">
                <android.support.v7.widget.SearchView
                    android:id="@+id/search_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </android.support.v7.widget.SearchView>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/bt_cancel"
                android:layout_marginLeft="10dp"
                android:visibility="gone"
                android:background="@color/colorAccent"
                android:gravity="center_horizontal|center_vertical"
                android:layout_width="65dp"
                android:layout_height="35dp"
                android:orientation="horizontal" >
                <TextView
                    android:text="@string/all_contacts_search_cancel"
                    android:textColor="@color/while_background"
                    android:textSize="@dimen/all_contacts_search_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_tags"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:layout_marginTop="5dp"
            android:paddingLeft="10dp"
            android:id="@+id/my_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical" />
    </LinearLayout>


</android.support.design.widget.CoordinatorLayout>
