<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:font="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/navigation_view_item_avatar_height"
    android:background="#323232"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_avatar"
        android:layout_width="@dimen/navigaiton_view_item_avatar_image_width"
        android:layout_height="@dimen/navigaiton_view_item_avatar_image_height"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/navigaiton_view_item_avatar_name_margin_left"
        android:background="@drawable/avatar" />

    <offic.htk.com.officproject.views.CustomFontTextView
        android:id="@+id/tv_username"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/navigaiton_view_item_avatar_name_margin_left"
        android:layout_marginStart="@dimen/navigaiton_view_item_avatar_name_margin_left"
        android:gravity="center_vertical"
        android:text="@string/navtigation_view_item_avatar_user_name"
        android:textColor="@color/navigation_view_item_avatar_tv_username"
        android:textSize="@dimen/navigation_view_item_avatar_tv_size"
        android:textStyle="bold"
        font:font="@string/font_helveticaneue" />


</LinearLayout>