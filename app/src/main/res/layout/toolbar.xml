<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:font="http://schemas.android.com/tools"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/colorAccent"
    android:minHeight="?attr/actionBarSize"
    app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
    app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:src="@drawable/ic_menu" />

        <TextView
            android:id="@+id/tv_details"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="All Contacts"
            android:textColor="@color/login_tv_sign_up"
            android:textSize="@dimen/toolbar_tv_text_size"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/img_action_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center"
            android:layout_marginEnd="@dimen/toolbar_img_margin"
            android:layout_marginRight="@dimen/toolbar_img_margin"
            android:src="@drawable/ic_add_new"
            android:visibility="gone" />

        <offic.htk.com.officproject.views.CustomFontTextView
            android:id="@+id/tv_action_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center"
            android:layout_marginEnd="@dimen/toolbar_img_margin"
            android:layout_marginRight="@dimen/toolbar_img_margin"
            android:text="Edit"
            android:textColor="#FAFAFA"
            android:textSize="@dimen/toolbar_tv_text_size"
            android:visibility="gone"
            font:font="@string/font_helveticaneue" />
    </FrameLayout>


</android.support.v7.widget.Toolbar>
