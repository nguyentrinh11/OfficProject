<?xml version="1.0" encoding="utf-8"?>
<com.daimajia.swipe.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:font="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swip_row_groups"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ln_container_swip"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:background="@color/contact_swip_background"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ln_edit_groups"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_edit_groups"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_edit" />

            <offic.htk.com.officproject.views.CustomFontTextView
                android:id="@+id/swip_edit_groups"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/all_contacts_swipe_text_margin_top"
                android:gravity="center"
                android:text="Edit"
                android:textColor="@color/contact_detail_click"
                android:textSize="@dimen/all_contacts_click_favorite_text_size"
                font:font="@string/font_helveticaneue_light" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ln_delete_groups"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_delete_groups"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_delete_phone" />

            <offic.htk.com.officproject.views.CustomFontTextView
                android:id="@+id/swip_delete_groups"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/all_contacts_swipe_text_margin_top"
                android:text="Delete"
                android:textColor="@color/contact_delete_click"
                android:textSize="@dimen/all_contacts_click_favorite_text_size"
                font:font="@string/font_helveticaneue_light" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/while_background"
        android:orientation="vertical">

        <offic.htk.com.officproject.views.CustomFontTextView
            android:id="@+id/tv_name_groups"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:text="Leaders-HTK"
            android:textSize="16sp"
            android:textStyle="bold"
            font:font="@string/font_helveticaneue_medium" />

        <offic.htk.com.officproject.views.CustomFontTextView
            android:id="@+id/tv_name_member_groups"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="2dp"
            android:lines="2"
            android:maxLines="2"
            android:text="Son Hoang"
            android:textColor="@color/org_line_divided"
            android:textSize="12sp"
            android:textStyle="bold"
            font:font="@string/font_helveticaneue" />

    </LinearLayout>


</com.daimajia.swipe.SwipeLayout>