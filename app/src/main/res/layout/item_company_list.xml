<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:font="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#E0E0E0"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/splash_ln_item_company_height">

        <ImageView
            android:id="@+id/img_company"
            android:layout_width="@dimen/splash_img_company_width"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/splash_img_company_margin"
            android:layout_marginEnd="@dimen/splash_img_company_margin"
            android:layout_marginLeft="@dimen/splash_img_company_margin_left"
            android:layout_marginRight="@dimen/splash_img_company_margin"
            android:layout_marginStart="@dimen/splash_img_company_margin_left"
            android:layout_marginTop="@dimen/splash_img_company_margin"
            android:gravity="center"
            android:src="@drawable/ic_logo_company" />

        <offic.htk.com.officproject.views.CustomFontTextView
            android:id="@+id/tv_name_company"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/splash_tv_company_margin_left"
            android:layout_marginStart="@dimen/splash_tv_company_margin_left"
            android:layout_toEndOf="@+id/img_company"
            android:layout_toRightOf="@+id/img_company"
            android:gravity="center"
            android:singleLine="true"
            android:text="Gloryday"
            android:textSize="18sp"
            font:font="@string/font_helveticaneue_medium" />

        <LinearLayout
            android:layout_width="@dimen/splash_ln_img_move_height"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true">

            <ImageView
                android:id="@+id/img_remove"
                android:layout_width="@dimen/splash_img_move_width"
                android:layout_height="@dimen/splash_img_move_height"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/splash_img_move_margin_right"
                android:layout_marginRight="@dimen/splash_img_move_margin_right"
                android:gravity="center"
                android:src="@drawable/ic_arrow" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:background="#9E9E9E" />


</LinearLayout>