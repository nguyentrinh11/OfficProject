<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:font="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ln_dialog_add_new"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/custom_edit_text"
        android:orientation="vertical">

        <offic.htk.com.officproject.views.CustomFontTextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Add a new person"
            android:textColor="#157efb"
            android:textSize="15sp"
            android:textStyle="bold"
            font:font="@string/font_helveticaneue" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#BDBDBD" />

        <offic.htk.com.officproject.views.CustomFontTextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Add a new company"
            android:textColor="#157efb"
            android:textSize="15sp"
            android:textStyle="bold"
            font:font="@string/font_helveticaneue" />
    </LinearLayout>

    <offic.htk.com.officproject.views.CustomFontTextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/custom_edit_text"
        android:gravity="center"
        android:text="Cancel"
        android:textColor="#157efb"
        android:textSize="16sp"
        android:textStyle="bold"
        font:font="@string/font_helveticaneue_medium" />
</LinearLayout>